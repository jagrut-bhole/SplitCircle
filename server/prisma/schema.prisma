generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique
  email     String    @unique
  password  String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Expense   Expense[]
}

model Expense {
  id        String   @id @default(cuid())
  title     String
  amount    Float
  date      DateTime
  paidById  String
  groupId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [paidById], references: [id])

  @@index([date])
  @@index([groupId])
  @@index([paidById])
}

model Group {
  id          String   @id @default(cuid())
  name        String
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([createdById])
}
